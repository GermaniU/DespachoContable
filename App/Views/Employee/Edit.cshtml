@model EmployeeForUpdateViewModel

@{
    ViewData["Title"] = "Editar Empleado";
}

<h1>Editar</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-2">
                <label asp-for="Nombre" class="control-label">Nombre:</label>
                <input asp-for="Nombre" class="form-control" disabled/>
            </div>
            <div class="form-group mb-2">
                <label asp-for="ApellidoPaterno" class="control-label">Apellido Paterno:</label>
                <input asp-for="ApellidoPaterno" class="form-control" disabled />
            </div>
            <div class="form-group mb-2">
                <label asp-for="ApellidoMaterno" class="control-label">Apellido Materno:</label>
                <input asp-for="ApellidoMaterno" class="form-control" disabled />
            </div>
            <div class="form-group mb-2">
                <label asp-for="FechaNacimiento" class="control-label">Fecha Nacimiento:</label>
                <input asp-for="FechaNacimiento" class="form-control" disabled />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Genero" class="control-label">Género:</label>
                <input asp-for="Genero" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="EstadoCivil" class="control-label">Estado Civil:</label>
                <input asp-for="EstadoCivil" class="form-control" />
                <span asp-validation-for="EstadoCivil" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Rfc" class="control-label">RFC:</label>
                <input asp-for="Rfc" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label class="control-label">Puesto</label>
                
                @Html.DropDownListFor(model => model.IdPuesto,ViewBag.PositionList as SelectList,  new { @class = "form-control"} )

                @Html.ValidationMessageFor(model => model.IdPuesto, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label">Dirección:</label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label">Teléfono:</label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="FechaAlta" class="control-label">Fecha Alta:</label>
                <input asp-for="FechaAlta" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="FechaBaja" class="control-label">Fecha Baja:</label>
                <input asp-for="FechaBaja" class="form-control" />
                <span asp-validation-for="FechaBaja" class="text-danger"></span>
            </div>
           
            <div class="btn-toolbar mb-3" role="toolbar" aria-label="Toolbar with button groups">
                <div class="input-group mt-4 me-2">
                    <input type="submit" value="Actualizar" class="btn btn-primary" />
                </div>
                <div class="input-group mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>
            
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


