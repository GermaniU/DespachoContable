<!-- Modal -->
<div class="modal fade" id="modalBusqueda" tabindex="-1" aria-labelledby="modalBusqueda" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Buscar Empleado</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                  <form asp-action="Search">

                    <div class="form-group">
                        <label for="Nombre">Nombre:</label>
                        <input asp-for="Nombre" class="form-control" id="Nombre" />
                    </div>
                    <div class="form-group">
                        <label for="Rfc">RFC:</label>
                        <input asp-for="Rfc" class="form-control" id="rfc"/>
                    </div>

                    @{
                        List<SelectListItem> listItems = new List<SelectListItem>();
                        listItems.Add(new SelectListItem
                            {
                                Text = "Labora Actualmente",
                                Value = "False"
                            });
                                        listItems.Add(new SelectListItem
                            {
                                Text = "Empleado Dado de Baja",
                                Value = "True"
                            });
                    }


                    <div class="form-group">
                        <label for="exampleInputEmail1">Estatus:</label>
                        @Html.DropDownListFor(model => model.IdStatus, listItems, "-- Seleccionar Estatus --", new { @class = "form-control drop"})

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary buscar">Buscar</button>

                    </div>
                </form>
            </div>
        </div>
    </div>
